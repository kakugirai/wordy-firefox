{
    "name": "Wordy",
    "version": "0.1.1",
    "description": "Wordy, random Japanese grammar in your new tab.",
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "manifest_version": 2,
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "applications": {
        "gecko": {
            "id": "me@girai.dev"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "permissions": [
        "storage"
    ]
}